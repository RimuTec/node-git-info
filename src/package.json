{
   "name": "@rimutec/ts-git-info",
   "version": "0.9.0",
   "description": "A simple package to get git information from a git repository.",
   "main": "index.js",
   "scripts": {
      "build": "./remove-erroneous-files.sh && tsc",
      "test": "echo \"Error: no test specified\" && exit 1",
      "test:coverage": "jest --coverage --passWithNoTests --testMatch '**/?(*.)+(micro|integration).[jt]s?(x)'",
      "upgrade-all": "pnpm upgrade:prepare && pnpm upgrade:packages && pnpm install && pnpm upgrade:fix-vulnerabilities && pnpm build && pnpm test:coverage",
      "upgrade:prepare": "./remove-intermediate-files.sh && rm -rf pnpm-lock.yaml && rm -rf ../.pnpm-store",
      "upgrade:packages": "pnpx npm-check-updates -u -p pnpm",
      "upgrade:fix-vulnerabilities": "pnpm audit fix || echo \"Could not resolve some vulnerabilities\""
   },
   "author": "RimuTec Ltd",
   "license": "MIT",
   "repository": {
      "type": "git",
      "url": "https://github.com/RimuTec/ts-git-info"
   },
   "keywords": [
      "git",
      "properties",
      "info"
   ],
   "bin": "bin/ts-git-info",
   "dependencies": {
      "bluebird": "3.7.2",
      "child-process-promise": "2.2.1",
      "command-line-args": "5.2.1",
      "moment": "2.29.4"
   },
   "devDependencies": {
      "@types/node": "20.10.5",
      "app-root-dir": "1.0.2",
      "chai": "4.3.10",
      "eslint": "8.56.0",
      "jest": "29.7.0",
      "mocha": "10.2.0",
      "mock-fs": "5.2.0",
      "sinon": "17.0.1",
      "sinon-chai": "3.7.0",
      "tmp": "0.2.1",
      "typescript": "5.3.3",
      "utils-fs-read-properties": "1.0.0"
   }
}
